{{#partial "content"}}

    <div class="card">
        <div class="card-body">
            <h1>Add a Sighting</h1>
            <form action="/sightings" method="post">
                <div class="form-group">

                    <label for="animal" class="in-line">models.Animals:</label>
                    <select id="animal" name="animal" type="text" class="form-control">
                        {{#if animals}}

                            {{#each animals}}
                                <option name="animal" value="{{id}}">{{name}}</option>
                            {{/each}}
                        {{/if}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="location">Pick Location:</label>
                    <select id="location" name="location" type="text" class="form-control ">
                        <option value="Zone A">Near the Lake</option>
                        <option value="Zone B">SE Quadrant</option>
                        <option value="Zone C">Zone A</option>
                        <option value="Zone D">Around NW Quadrant</option>

                    </select>
                </div>
                <div class="form-group">
                    <label for="rangerName">Yo Name:</label>
                    <input type="text" name="rangerName" value="{{this.rangerName}}" class="form-control">
                </div>
                <br>
                <button class="btn btn-dark" type="submit" >Add</button>
            </form>
        </div>
    </div>
{{/partial}}

{{>layout.hbs}}